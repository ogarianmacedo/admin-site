@model ProjetoAdminSite.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="row">
    <div class="col s10">
        <h5>Editar Usuário @Model.Nome</h5>
    </div>

    <div class="col s2 right-align">
        <br />
        <a class="waves-effect waves-light btn" asp-action="Index" asp-controller="Usuario">
            <i class="material-icons left icones">reply</i>Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col s6">
        <form asp-action="EditarUsuario" asp-controller="Usuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UsuarioId" />

            <div class="input-field col s12">
                <input asp-for="Nome" id="Nome" type="text" class="validate">
                <label for="Nome">Nome do Usuário</label>
                <span asp-validation-for="Nome" class="red-text darken-3"></span>
            </div>

            <div class="input-field col s12">
                <input asp-for="Email" id="Email" type="email" class="validate">
                <label for="Email">E-mail</label>
                <span asp-validation-for="Email" class="red-text darken-3"></span>
            </div>

            <div class="input-field col s12">
                <input asp-for="Senha" id="Senha" type="password" class="validate">
                <label for="Senha">Nova Senha</label>
                <span asp-validation-for="Senha" class="red-text darken-3"></span>
            </div>

            <div class="input-field col s12">
                <label>
                    <input type="checkbox" asp-for="Ativo"/>
                    <span>Ativo</span>
                </label>
            </div>

            <div class="right-align">
                <input type="submit" value="Editar" class="btn btn-small green darken-1" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}