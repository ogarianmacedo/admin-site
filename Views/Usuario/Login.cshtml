@model ProjetoAdminSite.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col s4 offset-s5">
        <div class="card-panel" style="margin-top: 50px;">
            <form asp-action="Entrar" asp-controller="Usuario">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-field col s12">
                    <input asp-for="Email" id="Email" type="email" class="validate">
                    <label for="Email">E-mail</label>
                    <span asp-validation-for="Email" class="red-text darken-3"></span>
                </div>

                <div class="input-field col s12">
                    <input asp-for="Senha" id="Senha" type="password" class="validate">
                    <label for="Senha">Senha</label>
                    <span asp-validation-for="Senha" class="red-text darken-3"></span>
                </div>

                <div class="right-align">
                    <input type="submit" value="Entrar" class="btn btn-small cyan darken-4" />
                </div>
            </form>
        </div>

        @if (ViewBag.AlertaLogin != string.Empty)
        {
            <div class="center-align alert-danger">@ViewBag.AlertaLogin</div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
