@model ProjetoAdminSite.Models.Blog

@{
    ViewData["Title"] = "Detalhes de Blogs";
}

<div class="row">
    <div class="col s8">
        <h5>Título: @Model.Titulo</h5>
    </div>

    <div class="col s4 right-align">
        <br />
        <a class="waves-effect waves-light btn" asp-action="Index" asp-controller="Blog">
            <i class="material-icons left icones">reply</i>Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col s12 m7">
        <div class="card">
            <div class="card-image">
                <img id="imagem" src="@Url.Content(Model.Imagem)" alt="Imagem" class="imagem-detalhe-blog"/>
                <span class="card-title">@Model.Titulo</span>
            </div>
            <div class="card-content">
                <p>
                    @Model.Texto
                </p>
                <br>
                <p class="right-align">
                    @Model.DtPublicacao
                    <br>
                    @Model.Usuario.Nome
                </p>
            </div>
            <div class="card-action">
                <a asp-action="Editar" asp-route-id="@Model.BlogId" class="btn-floating btn-small waves-effect waves-light orange darken-4" title="Editar">
                    <i class="material-icons">edit</i>
                </a>
            </div>
        </div>
    </div>
</div>